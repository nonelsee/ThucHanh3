<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_course_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khóa học"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_course_info_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"/>

        <TextView
            android:id="@+id/tv_course_info_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyên ngành"
            android:layout_marginTop="8dp"/>

        <CheckBox
            android:id="@+id/cb_course_info_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã kích hoạt"
            android:clickable="false"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
